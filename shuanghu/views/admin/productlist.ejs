<% include ./adminHead.ejs %>
    <div class="container">
        <input type="button" class="btn btn-primary" value="Add" data-toggle="modal" data-target="#addProductModal">
        <div class="row">
            <div class="col-md-12">
                    <table class="table table-striped table-bordered">
                    <tr>
                        <th>p_id</th>
                        <th>name</th>
                        <th>price</th>
                        <th>tag</th>
                        <th>pic</th>
                        <th>left amount</th>
                        <th>action</th>
                    </tr>
                    <% if(products.length>0){ %>
                    <% products.forEach(function(p,index){%>
                    <tr>
                        <td><%= p.id %></td>
                        <td><%= p.name %></td>
                        <td><%= p.price %></td>
                        <td><%= p.tag %></td>
                        <td><%= p.pic %></td>
                        <td><%= p.leftAmount %></td>
                        <td style="display:flex">
                            <a class="text-primary" style="flex:1;cursor:pointer;" class="ediBtn">Edit</a>
                            <a class="text-danger" style="flex:1;cursor:pointer;" class="delBtn">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %> 
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addProductModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Add Product</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="pID">Product ID</label>
                            <input type="text" id="pID" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="pName">Product Name</label>
                            <input type="text" id="pName" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" id="price" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="tag">Tag</label>
                            <input type="text" id="tag" autocomplete="off" class="form-control" placeholder="yi dou hao fen ge">
                        </div>
                        <div class="form-group">
                            <label for="pic">Product Pic</label>
                            <input type="file" id="pic" accept="image/*">
                        </div>
                        <div class="form-group">
                            <label for="leftAmount">Left Amount</label>
                            <input type="text" id="leftAmount" autocomplete="off" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-dafault" type="button" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary addBtn" type="button">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% include ./adminFoot.ejs %>