<% include ../layout.ejs %>
<div class="container" style="min-height:768px;margin-top:100px;">
    <% if(products.length>0) {%>
        
            <div class="row">
                <% products.forEach(function(product,index){%>
                <a class="col-md-2 box" href='/product/<%= product.id %>'>
                    <img src="/images/upload/<%= product.pic %>" alt="" class="img-responsive">
                    <p style="text-align:center;"><%= product.name %></p>
                </a>
                <% }) %>
            </div>
          
    <% } else { %>
        <div class="row" style='text-align:center;'>无结果</div>
    <% } %>
</div>
<% include ../includes/footer.ejs %>