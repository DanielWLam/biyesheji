<% include ../layout.ejs %>
<div class="container" style="min-height:768px;">
    <div class="row" style="margin:30px;" >
        <div class="col-md-7">
            <img src="/images/upload/<%= pic %>" alt="" class="img-responsive">          
        </div>
        <div class="col-md-5">
            <h2><%= brand %></h2>
            <small><%= type_color %></small>
            <h1 class="price">¥ <%= price %></h1>
            <small class="t-sm">产品货号 ：<span class="pid"><%= p_id %></span> </small>
            <p class="info"><%= info %></p>
            <label for="productLeft">库存：</label>
            <input type="text" id="productLeft" disabled value="<%= left %>">
            <div class="spliter"></div>
            <label for="amount">购买数量：</label>
            <input type="number" value="0" id="amount" min="0">
            <button class="btn btn-warning" id="toCar" type="button">添加到购物车</button>
        </div>
    </div>
    <div class="spliter"></div>
</div>
<% include ../includes/footer.ejs %>